{
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/node": "^7.0.0",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-optional-chaining": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@babel/runtime": "^7.0.0",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "8.2.1",
    "babel-jest": "^22.4.3",
    "chokidar": "^1.7.0",
    "cross-env": "^5.1.4",
    "eslint": "^5.6.0",
    "eslint-config-google": "^0.10.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-flow-vars": "^0.5.0",
    "eslint-plugin-flowtype": "^2.50.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.1",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "flow-bin": "^0.42.0",
    "fs-extra": "^7.0.0",
    "glob": "^7.1.1",
    "husky": "^1.0.0",
    "jest": "^23.5.0",
    "jest-cli": "^23.5.0",
    "lerna": "^3.3.0",
    "lint-staged": "^7.3.0",
    "npm-run-all": "4.1.2",
    "plop": "^1.8.1",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.1",
    "yargs": "^10.0.3"
  },
  "engines": {
    "yarn": "^1.2.1",
    "node": ">=6.11.5"
  },
  "eslintIgnore": [
    "interfaces",
    "**/__tests__/fixtures/"
  ],
  "private": true,
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "echo",
      "eslint --ignore-path .gitignore --ignore-path .prettierignore --fix",
      "git add"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "scripts": {
    "bootstrap": "npm-run-all -s check-versions lerna-prepare",
    "check-versions": "babel-node scripts/check-versions.js",
    "format": "npm run format:js && npm run format:other",
    "format:other": "npm run prettier -- --write",
    "format:js": "npm run lint:js -- --fix",
    "jest": "jest",
    "lerna": "lerna",
    "lerna-prepare": "lerna run prepare",
    "lint": "npm-run-all --continue-on-error -p lint:flow lint:js lint:other",
    "lint:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .js,.jsx .",
    "lint:flow": "babel-node scripts/flow-check.js",
    "lint:other": "prettier \"**/*.{json,md,scss,yaml,yml}\"",
    "plop": "plop",
    "prebootstrap": "yarn",
    "publish": "lerna publish",
    "publish-canary": "lerna publish --canary --yes",
    "publish-next": "lerna publish --npm-tag=next --bump=prerelease",
    "test": "npm-run-all -s lint jest",
    "test:update": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:integration": "jest --config=jest.integration.js",
    "test_bkup": "npm-run-all -s lint test-node test-integration",
    "version": "prettier --write \"**/CHANGELOG.md\" --no-semi",
    "watch": "lerna run watch --no-sort --stream --concurrency 999"
  },
  "workspaces": [
    "packages/*"
  ]
}
